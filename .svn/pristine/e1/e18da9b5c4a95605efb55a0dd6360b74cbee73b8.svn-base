<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="kr.co.inogard.enio.agent.mappers.rfq.RfqCusMapper">
  <sql id="sqlSelect">
    SELECT rfq_no, 
           cus_cd, 
           quot_rev, 
           rslt_yn, 
           po_ymd 
    FROM   agt_rfqcus rc
  </sql>

  <select id="findAllByRfqNo" resultType="rfqCus">
    <include refid="sqlSelect" />
    <![CDATA[
      WHERE  rc.rfq_no = #{rfqNo} 
    ]]>
  </select>

  <insert id="add" parameterType="rfqCus">
  <![CDATA[
		INSERT INTO agt_rfqcus (
      rfq_no, 
      cus_cd, 
      quot_rev, 
      rslt_yn, 
      po_ymd
    ) VALUES (
      #{rfqNo}, 
      #{cusCd}, 
      #{quotRev}, 
      #{rsltYn}, 
      To_char(#{poYmd}, 'YYYYMMDD')
    ) 
  ]]>
  </insert>
</mapper>