<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="kr.co.inogard.enio.agent.mappers.rtlog.RtLogMapper">
	<insert id="add" parameterType="RtLog" useGeneratedKeys="false">
		<selectKey resultType="RtLog" keyProperty="logNo" order="BEFORE">
		<![CDATA[
			SELECT B.agt_cd || To_char(SYSDATE, 'YYYYMMDD') || A.seq AS logNo 
			FROM   (
			  SELECT Substr(To_char(To_number('1' || Nvl(Max(Substr(I.log_no, 14, 7)), '0000000') + 1)), 2, 7) AS SEQ 
	      FROM   agt_rtlog I 
	             cross join agt_agent C 
	      WHERE  I.log_no LIKE C.agt_cd || To_char(SYSDATE, 'YYYYMMDD') || '%') A 
	    cross join agt_agent B 
    ]]>
		</selectKey>
    <![CDATA[
			INSERT INTO agt_rtlog (
			  log_no, 
			  log_lvl, 
			  ttl, 
			  message, 
			  solve_yn, 
			  solve_dt, 
			  reg_dt
	    ) VALUES (
			 #{logNo}, 
       #{logLvl}, 
       #{ttl},
       #{message},        
       #{solveYn}, 
       To_char(#{solveDt}, 'YYYYMMDDHH24MISS'), 
       To_char(sysdate, 'YYYYMMDDHH24MISS') 
			)
    ]]>
	</insert>

	<update id="updateSolved" parameterType="RtLog">
    <![CDATA[
			UPDATE agt_rtlog 
			SET    solve_dt = To_char(sysdate, 'YYYYMMDDHH24MISS'), 
			       solve_yn = #{solveYn} 
			WHERE  log_no = #{logNo} 
		]]>
	</update>

	
	<select id="findByLogNo" parameterType="string" resultType="RtLog">
    <![CDATA[
			SELECT A.log_no, 
		       A.log_lvl, 
		       A.ttl, 
		       A.message, 
		       A.solve_yn,
		       To_date(A.solve_dt, 'YYYYMMDDHH24MISS') AS SOLVE_DT, 
		       To_date(A.reg_dt, 'YYYYMMDDHH24MISS') AS REG_DT 
		FROM   agt_rtlog A 
		WHERE  A.log_no = #{logNo} 
    ]]>
	</select>
</mapper>