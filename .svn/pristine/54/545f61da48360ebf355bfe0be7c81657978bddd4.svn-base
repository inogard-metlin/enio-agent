<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="kr.co.inogard.enio.agent.mappers.po.PoFileMapper">
  <sql id="sqlSelect">
    SELECT pf.po_no, 
           pf.file_seq, 
           pf.file_no,
           f.cli_file_nm, 
           f.svr_file_nm, 
           f.svr_file_path, 
           dbo.getStringToDateTime(f.reg_dt) as reg_dt 
    FROM   agt_pofile pf 
      JOIN agt_file f ON( pf.file_no = f.file_no )  
  </sql>
  
  <select id="findAllByPoNo" resultType="poFile">
    <include refid="sqlSelect"/>
    <![CDATA[
      WHERE  pf.po_no = #{poNo}
    ]]>
  </select>
  
  <select id="findByPoNoAndFileSeq" resultType="poFile">
    <include refid="sqlSelect"/>
    <![CDATA[
      WHERE  pf.po_no = #{poNo}
      AND  pf.file_seq = #{fileSeq}
    ]]>
  </select>
  
	<insert id="add" parameterType="poFile">
    <selectKey resultType="string" keyProperty="fileSeq" order="BEFORE">
    <![CDATA[
      SELECT RIGHT('00000' + CONVERT(VARCHAR, ISNULL(MAX(pof.file_seq), '00000') + 1), 5) As fileSeq 
      FROM   agt_pofile pof 
      WHERE  pof.po_no = #{poNo} 
    ]]>
    </selectKey>  
	<![CDATA[
  	INSERT INTO agt_pofile (
      po_no, 
      file_seq, 
      file_no
    ) VALUES (
      #{poNo}, 
      #{fileSeq}, 
      #{fileNo}
    )
	]]>
	</insert>	
</mapper>